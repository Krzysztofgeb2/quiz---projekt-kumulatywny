using System;
using System.Linq;
using Microsoft.EntityFrameworkCore;
using projectC;

namespace projectC
{
    class Program
    {
        static void Main(string[] args)
        {
            var context = new QuizDbContext();

            // Wykonanie migracji â€“ jeÅ›li jeszcze nie byÅ‚y wykonane
            context.Database.Migrate();

            // Seedowanie danych do istniejÄ…cej bazy
            seeder.Seed(context);

            Console.WriteLine("Projekt gotowy. Baza danych zawiera quizy.\n");

            // ðŸ”¹ Pobranie dostÄ™pnych quizÃ³w z bazy
            var allQuizzes = context.Quizzes.ToList();
            if (!allQuizzes.Any())
            {
                Console.WriteLine("Brak quizÃ³w w bazie!");
                return;
            }

            Console.WriteLine("DostÄ™pne quizy:");
            for (int i = 0; i < allQuizzes.Count; i++)
            {
                Console.WriteLine($"{i + 1}. {allQuizzes[i].Title}");
            }

            int quizChoice = ReadInt("Wybierz quiz: ", 1, allQuizzes.Count) - 1;

            // ðŸ”¹ Pobranie wybranego quizu z pytaniami i odpowiedziami
            var quiz = context.Quizzes
                .Include(q => q.Questions)
                    .ThenInclude(q => q.Answers)
                .FirstOrDefault(q => q.Id == allQuizzes[quizChoice].Id);

            if (quiz == null)
            {
                Console.WriteLine("Wybrany quiz nie istnieje!");
                return;
            }

            Console.WriteLine($"\n== {quiz.Title} ==");

            int score = 0;

            // ðŸ”¹ PÄ™tla po pytaniach i odpowiedziach
            foreach (var question in quiz.Questions)
            {
                Console.WriteLine();
                Console.WriteLine(question.Content);

                int i = 1;
                foreach (var answer in question.Answers)
                {
                    Console.WriteLine($"{i}. {answer.Text}");
                    i++;
                }

                int choice = ReadInt("Wybierz odpowiedÅº: ", 1, question.Answers.Count);

                // Pobranie odpowiedzi po indeksie przy pomocy ElementAt
                var selectedAnswer = question.Answers.ElementAt(choice - 1);

                if (selectedAnswer.IsCorrect)
                {
                    Console.WriteLine("âœ” Poprawna odpowiedÅº!");
                    score++;
                }
                else
                {
                    Console.WriteLine("âœ– BÅ‚Ä™dna odpowiedÅº.");
                }
            }

            Console.WriteLine();
            Console.WriteLine($"TwÃ³j wynik: {score}/{quiz.Questions.Count}");
            Console.WriteLine("Koniec quizu!");
        }

        // ðŸ”¹ Metoda do odczytu liczby z konsoli w zakresie
        private static int ReadInt(string message, int min, int max)
        {
            while (true)
            {
                Console.Write(message);
                if (int.TryParse(Console.ReadLine(), out int value) && value >= min && value <= max)
                {
                    return value;
                }
                Console.WriteLine("Niepoprawny wybÃ³r. SprÃ³buj ponownie.");
            }
        }
    }
}
